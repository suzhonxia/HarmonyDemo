<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:width="match_parent">

    <Image
        ohos:height="168vp"
        ohos:id="$+id:ivPremiumCover"
        ohos:image_src="$media:img_home_premium_1"
        ohos:left_margin="15vp"
        ohos:right_margin="15vp"
        ohos:scale_mode="clip_center"
        ohos:width="match_parent"/>

    <Text
        ohos:align_left="$id:ivPremiumCover"
        ohos:background_element="$graphic:shape_premium_label_bg"
        ohos:height="18vp"
        ohos:id="$+id:tvPremiumLabel"
        ohos:left_padding="8vp"
        ohos:right_padding="8vp"
        ohos:text="早教益智"
        ohos:text_alignment="center"
        ohos:text_color="$color:white"
        ohos:text_size="12fp"
        ohos:width="match_content"/>

    <DependentLayout
        ohos:id="$+id:premiumContentLayout"
        ohos:background_element="$graphic:shape_premium_content_bg"
        ohos:height="match_content"
        ohos:orientation="vertical"
        ohos:padding="15vp"
        ohos:top_margin="135vp"
        ohos:width="match_parent">

        <Text
            ohos:height="match_content"
            ohos:id="$+id:tvPremiumTitle"
            ohos:line_height_num="1.3"
            ohos:max_text_lines="2"
            ohos:multiple_lines="true"
            ohos:text="竞赛标题"
            ohos:text_color="$color:dark"
            ohos:text_size="16fp"
            ohos:text_weight="700"
            ohos:truncation_mode="ellipsis_at_end"
            ohos:width="match_parent"/>

        <Text
            ohos:below="$id:tvPremiumTitle"
            ohos:height="match_content"
            ohos:id="$+id:tvPremiumPrice"
            ohos:text_weight="700"
            ohos:text="￥199"
            ohos:text_color="#ff0000"
            ohos:text_size="15fp"
            ohos:top_margin="6vp"
            ohos:width="match_content"/>

        <Text
            ohos:below="$id:tvPremiumTitle"
            ohos:height="match_content"
            ohos:id="$+id:tvPremiumOriginalPrice"
            ohos:left_margin="10vp"
            ohos:right_of="$id:tvPremiumPrice"
            ohos:text="￥199"
            ohos:text_color="$color:thinGray"
            ohos:text_size="15fp"
            ohos:top_margin="6vp"
            ohos:width="match_content"/>
    </DependentLayout>
</DependentLayout>